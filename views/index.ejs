
<%- include('./layout/header.ejs') %>
    <h2>首页</h2>
    
    <div class="list-group">
        <% for(var i = 0; i < list.length; i++){ %>
        <a href="/article/info?id=<%= list[i].id %>" class="list-group-item">
            <span class="badge" style="background-color:#f0ad4e;">发表时间：<%= list[i].ctime %></span>
            <span class="badge" style="background-color:#5bc0de;">作者：<%= list[i].nickname %></span>
            <%= list[i].title %>
        </a>
        
        <%  } %>
    </div>

    <!-- 分页区域 -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="/?page=<%= nowPage == 1 ? 1 : (nowPage-1) %>">
                    <span>&laquo;</span>
                </a>
            </li>

            <% for(var i = 0; i < pages; i++) {%>
            <li class="<%= nowPage == (i+1) ? 'active' : '' %>">
                <a href="/?page=<%= (i+1) %>"> <%= (i+1) %> </a>
            </li>
            <% } %>
           

            <li>
                <a href="/?page=<%= nowPage == pages? pages : (+nowPage +1) %>">
                    <span>&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
<%- include('./layout/footer.ejs') %>